    <!-- Page Content -->
    <div class="container mt-5">
        <div class="upload-form">
            <h2 class="mb-4">Upload Solution</h2>
            <form action="/upload" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="solutionName">Solution Name</label>
                    <input type="text" class="form-control" id="solutionName" name="solutionName" required>
                </div>
                <div class="form-group">
                    <label for="solutionDescription">Solution Description</label>
                    <textarea class="form-control" id="solutionDescription" name="solutionDescription" rows="3" required></textarea>
                </div>
                <div class="form-group">
                    <label for="codeSnippets">Code Snippets</label>
                    <input type="text" class="form-control-file" id="codeSnippets" name="codeSnippets">
                </div>
                <div class="form-group">
                    <label for="documentation">Documentation PDF</label>
                    <input type="file" class="form-control-file" id="documentation" name="documentation" required>
                </div>
                <div class="form-group">
                    <label for="solutionZip">Solution ZIP File</label>
                    <input type="file" class="form-control-file" id="solutionZip" name="solutionZip">
                </div>
                <div class="form-group">
                    <label for="repositoryLink">Repository Link (Optional)</label>
                    <input type="text" class="form-control" id="repositoryLink" name="repositoryLink">
                </div>
                <button type="submit" class="btn btn-primary">Upload</button>
            </form>
        </div>
    </div>

