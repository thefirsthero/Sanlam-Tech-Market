    <script>
        // Initialize CodeMirror for codeSnippets textarea
        var codeSnippetsEditor = CodeMirror.fromTextArea(document.getElementById("codeSnippets"), {
            lineNumbers: true, // Show line numbers
            mode: "text/x-java", // Set the initial mode (Java in this example)
            // You can set the mode based on the selected programming language
            theme: "monokai", // Choose a CodeMirror theme (adjust as needed)
            autofocus: true // Auto-focus on the editor
        });

        // Change mode when the solutionCategory changes (assuming you store the language info in data attributes)
        document.getElementById("solutionCategory").addEventListener("change", function () {
            var selectedLanguage = this.value; // Get the selected language from the dropdown
            switch (selectedLanguage) {
                case "Java": // Update mode based on the selected language
                    codeSnippetsEditor.setOption("mode", "text/x-java");
                    break;
                case "Python":
                    codeSnippetsEditor.setOption("mode", "text/x-python");
                    break;
                // Add more cases for other languages
                default:
                    codeSnippetsEditor.setOption("mode", "text/plain"); // Default to plain text
                    break;
            }
        });
    </script>
