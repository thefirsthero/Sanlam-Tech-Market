        /* Add your custom styles for the upload form here */
        .upload-form {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px; /* Add some spacing around the form */
        }
    </style>
</head>

<body>
    <!-- Header Navigation -->
    <nav class="navbar navbar-expand-md">
        <a class="navbar-brand" href="#">
            <img src="images/footerLogoWhite.png" title="title" alt="additional title" />
        </a>
        <button class="navbar-toggler navbar-dark" type="button" data-toggle="collapse" data-target="#main-navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="main-navigation">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/client_home">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/about">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#contact_info">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/upload">Upload Solution</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user_solutions">My Solutions</a>
                </li>                
                <li class="nav-item">
                    <a class="nav-link" href="/">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container upload-form">
        <h2 class="mt-4 mb-4">Upload Solution</h2>
        <form action="/upload" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="solutionName">Solution Name</label>
                <input type="text" class="form-control" id="solutionName" name="solutionName" required>
            </div>
            <div class="form-group">
                <label for="solutionDescription">Solution Description</label>
                <textarea class="form-control" id="solutionDescription" name="solutionDescription" rows="3" required></textarea>
            </div>
            <div class="form-group">
                <label for="codeSnippets">Code Snippets</label>
                <input type="text" class="form-control" id="codeSnippets" name="codeSnippets">
            </div>
            <div class="form-group">
                <label for="documentation">Documentation PDF</label>
                <input type="file" class="form-control-file" id="documentation" name="documentation" multiple>
            </div>
            <div class="form-group">
                <label for="solutionZip">Solution ZIP File</label>
                <input type="file" class="form-control-file" id="solutionZip" name="solutionZip" multiple>
            </div>
            <div class="form-group">
                <label for="repositoryLink">Repository Link (Optional)</label>
                <input type="text" class="form-control" id="repositoryLink" name="repositoryLink">
            </div>
            <!-- Update the solutionCategory field to be a dropdown -->
            <div class="form-group">
                <label for="solutionCategory">Solution Category</label>
                <select class="form-control" id="solutionCategory" name="solutionCategory" required>
                    <!-- Iterate through policies and create options -->
                    <% for (let policy of policies) { %>
                        <option value="<%= policy.policy_name %>"><%= policy.policy_name %></option>
                    <% } %>
                </select>
            </div>
            <div class="form-group">
                <label for="solutionTags">Solution Tags</label>
                <input type="text" class="form-control" id="solutionTags" name="solutionTags">
            </div>
            <button type="submit" class="btn btn-primary">Upload</button>
        </form>
    </div>

    <!-- Footer -->
    <footer class="page-footer mt-5">
