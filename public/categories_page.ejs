                <li class="nav-item">
                    <a class="nav-link" href="#contact_info">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/upload">Upload Solution</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
    <p>
    <!-- <div class = "panel-default"> -->
        <div class="container">
            <div class="tile-container">
                <% solutions.forEach((solution, index) => { %>
                    <div class="tile">
                        <!-- Tile content -->
                        <div class="d-flex mb-4 align-items-center">
                            <div class="width-5x height-5x p-2 bg-white shadow-sm position-relative flex-center">
                                <img src="images/policies/<%=solution.solution_category%>.png" class="img-fluid" alt="Solution Image">
                            </div>
                        </div>
                        <h5><%=solution.solution_name%></h5>
                        <p class="mb-0 text-muted"><%=solution.solution_description%></p>
                        <div class="product-buttons mt-4">
                            <button type="button" class="btn btn-block btn-primary btn-circle btn-icon-left" onclick="viewSolutions('<%=solution.solution_name%>')">
                                <i class="fa fa-code-fork"></i> View Solution
                            </button> 
                        </div>
                    </div>
                    <% if ((index + 1) % 3 === 0) { %>
                        </div><div class="tile-container">
                    <% } %>
                <% }); %>
            </div>
        </div>
    <!-- </div> -->










